# Frontend Environment Configuration
# Copy this file to .env.local for development

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Anthropic API Configuration
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
VITE_ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
VITE_ANTHROPIC_MAX_TOKENS=4000

# xAI API Configuration
VITE_XAI_API_KEY=your_xai_api_key_here
VITE_XAI_MODEL=grok-4-latest

# Hugging Face API Configuration
VITE_HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Application Configuration
VITE_APP_NAME=IZA OS
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Enterprise AI Development Platform

# Feature Flags
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_METRICS=true
VITE_ENABLE_ANALYTICS=false

# Development Configuration
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# Production Configuration (uncomment for production)
# VITE_API_URL=https://api.iza-os.com
# VITE_WS_URL=wss://api.iza-os.com
# VITE_DEBUG=false
# VITE_LOG_LEVEL=error
