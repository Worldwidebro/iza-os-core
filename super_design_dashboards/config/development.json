{
  "environment": "development",
  "debug": true,
  "logging": {
    "level": "debug",
    "console": true,
    "file": false
  },
  "security": {
    "csp": {
      "reportOnly": true,
      "directives": {
        "default-src": ["'self'", "'unsafe-inline'", "'unsafe-eval'"],
        "script-src": ["'self'", "'unsafe-inline'", "'unsafe-eval'", "http://localhost:*"],
        "style-src": ["'self'", "'unsafe-inline'", "http://localhost:*"],
        "img-src": ["'self'", "data:", "http:", "https:"],
        "connect-src": ["'self'", "ws:", "wss:", "http://localhost:*"]
      }
    },
    "cors": {
      "origin": ["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:*"],
      "credentials": true
    },
    "rateLimiting": {
      "enabled": false,
      "windowMs": 60000,
      "max": 1000
    }
  },
  "performance": {
    "caching": {
      "enabled": false,
      "maxAge": 0
    },
    "compression": {
      "enabled": false
    },
    "minification": {
      "enabled": false
    }
  },
  "monitoring": {
    "enabled": false,
    "metrics": false,
    "alerts": false
  },
  "features": {
    "hotReload": true,
    "sourceMaps": true,
    "debugger": true,
    "profiler": true
  }
}
